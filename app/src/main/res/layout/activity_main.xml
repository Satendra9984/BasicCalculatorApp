<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="false"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display_calc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:text="@string/display_calc"
        android:layout_margin="16sp"
        android:layout_weight="1">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp">

        <TextView
            android:id="@+id/clear_text"
            style="@style/action_textsStyles"
            android:text="c" />

        <TextView
            android:id="@+id/cut_text"
            style="@style/action_textsStyles"
            android:text="x" />

        <TextView
            android:id="@+id/modulus_text"
            style="@style/action_textsStyles"
            android:text="%" />

        <TextView
            android:id="@+id/multiply_text"
            style="@style/action_textsStyles"
            android:text="*" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp">

        <TextView
            android:id="@+id/number_1"
            style="@style/Number_Button_Style"
            android:layout_weight="1"
            android:text="1" />

        <TextView
            android:id="@+id/number_2"
            style="@style/Number_Button_Style"
            android:layout_weight="1"
            android:text="2" />

        <TextView
            android:id="@+id/number_3"
            style="@style/Number_Button_Style"
            android:layout_weight="1"
            android:text="3" />

        <TextView
            android:id="@+id/divide_text"
            style="@style/action_textsStyles"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp">

        <TextView
            android:id="@+id/number_4"
            style="@style/Number_Button_Style"
            android:layout_weight="1"
            android:text="4" />

        <TextView
            android:id="@+id/number_5"
            style="@style/Number_Button_Style"
            android:layout_weight="1"
            android:text="5" />

        <TextView
            android:id="@+id/number_6"
            style="@style/Number_Button_Style"
            android:layout_weight="1"
            android:text="6" />

        <TextView
            android:id="@+id/subtract_text"
            style="@style/action_textsStyles"
            android:text="_" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp">

        <TextView
            android:id="@+id/number_7"
            style="@style/Number_Button_Style"
            android:layout_weight="1"
            android:text="7" />

        <TextView
            android:id="@+id/number_8"
            style="@style/Number_Button_Style"
            android:layout_weight="1"
            android:text="8" />

        <TextView
            android:id="@+id/number_9"
            style="@style/Number_Button_Style"
            android:layout_weight="1"
            android:text="9" />

        <TextView
            android:id="@+id/addition_text"
            style="@style/action_textsStyles"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp">

        <TextView
            android:id="@+id/Scientific_calc"
            style="@style/action_textsStyles"
            android:layout_weight="1"
            android:text="R" />

        <TextView
            android:id="@+id/number_0"
            style="@style/Number_Button_Style"
            android:layout_weight="1"
            android:text="0" />

        <TextView
            android:id="@+id/number_decimal"
            style="@style/Number_Button_Style"
            android:layout_weight="1"
            android:text="." />

        <TextView
            android:id="@+id/equalToText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:layout_weight="1"
            android:background="#FA5521"
            android:gravity="center"
            android:text="="
            android:clickable="true"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:focusable="true" />
    </LinearLayout>


</LinearLayout>


